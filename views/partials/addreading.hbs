<form class="ui segment blue form" action="/station/{{station.id}}/autoreading" method="POST">
  <button class="ui fluid right labeled icon blue button"><i class="plus icon"></i>Auto Generate Reading</button>
</form>
<form class="ui segment grey form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="00" type="number" step="100" min="100" max="800" name="code" required>
    </div>
    
    <div class="field">
      <label for="temperature">Temperature</label>
      <input type="number" id="temperature" name="temperature" required="required" min="-100" max="100" step="0.01"
             placeholder="000.00 &#176C">
    </div>
    <div class="field">
      <label for="windSpeed">Wind Speed</label>
      <input type="number" id="windSpeed" name="windSpeed" required="required" min="0" max="500" step="0.01"
             placeholder="000.00 km/hr">
    </div>
    <div class="field">
      <label for="windDirection">Wind Direction</label>
      <input type="number" id="windDirection" name="windDirection" required="required" min="0" max="360" step="0.01"
             placeholder="000.00 &#176">
    </div>
    <div class="field">
      <label for="pressure">Pressure</label>
      <input type="number" id="pressure" name="pressure" required="required" min="0" max="1200" placeholder="0000 hPa">
    </div>
    </div>
  
  <button class="ui fluid right labeled icon grey button"><i class="plus icon"></i>Add Reading Manually</button>
</form>